<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Shopping Cart</h1>

<table>
  <thead>
    <tr>
      <th>Cart Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
	<td><%= cart.id %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Empty Cart', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
